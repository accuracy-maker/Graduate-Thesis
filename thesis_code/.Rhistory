sim_rPareto <- function(n, coords, rho, alpha)
{
varioFun <- function(h) (sqrt(sum(h^2)) / rho)^alpha
mvPot::simulPareto(n, loc = coords, vario = varioFun,
riskF = "sum", normalize = FALSE)
}
